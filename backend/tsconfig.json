{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "strict": true
    },
    "include": [
        "src",
        "prisma"
    ],
    "typeRoots": ["./node_modules/@types", "./src/types"]
}